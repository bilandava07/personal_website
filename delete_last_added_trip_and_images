import sqlite3
import os

with sqlite3.connect("trips.db") as conn:

    try:

        conn.row_factory = sqlite3.Row

        cursor = conn.cursor()

        # Get the last trip_id
        cursor.execute("SELECT trip_id FROM trips ORDER BY trip_id DESC LIMIT 1")
        last_trip = cursor.fetchone()
        
        if last_trip:
            trip_id = last_trip['trip_id']

            # Get all image filenames to delete the files later
            cursor.execute("SELECT image_filename FROM trips_images WHERE trip_id = ?", (trip_id,))
            image_files = [row['image_filename'] for row in cursor.fetchall()]

            # Delete images from DB
            cursor.execute("DELETE FROM trips_images WHERE trip_id = ?", (trip_id,))
            # Delete trip from DB
            cursor.execute("DELETE FROM trips WHERE trip_id = ?", (trip_id,))

            # Delete image files from disk
            for filename in image_files:
                path = os.path.join('./static/images', filename)
                if os.path.exists(path):
                    os.remove(path)

            print(f"Trip {trip_id} and its images have been deleted.")

            conn.commit()
            
    except Exception as e:
        print(e)
        if conn:
            conn.close()
